<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicineActivity">

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/name_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Enter Your Name"
            android:inputType="textCapWords"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone No."
            android:textSize="22sp"/>


        <EditText
            android:id="@+id/phnNo_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:hint=" Enter Your number"
            android:inputType="phone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADDRESS"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/address_add"
            android:layout_height="wrap_content"
            android:hint="Enter Your Complete Address"
            android:inputType="textMultiLine"
            android:lines="5"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp">
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Please select medicine"
            android:textAllCaps="true"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/cough_CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="24dp"
            android:text="Cough"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cold_CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="24dp"
            android:text="Cold"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/fever_CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="24dp"
            android:text="Fever"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/headache_CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="24dp"
            android:text="Headache"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/painkiller_CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="24dp"
            android:text="Pain Killer"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/loosemotion_CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="24dp"
            android:text="Loose Motion"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/antibiotic_CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingLeft="24dp"
            android:text="Antibiotic"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="More details"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/desc_add"
            android:layout_height="wrap_content"
            android:hint="Enter Left Out Medical Stuff"
            android:gravity="center_horizontal"
            android:inputType="textMultiLine"
            android:lines="5"
            android:layout_width="match_parent"
            android:background="@drawable/shape"
            android:layout_marginBottom="16dp">
        </EditText>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:onClick="order"
            android:text="submit"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:background="@color/colorAccent"/>


    </LinearLayout>
</ScrollView>